<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit Listing</h3>
      <form
        method="POST"
        action="/listings/<%= listing._id%>?_method=PUT"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="for-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            value="<%= listing.title %>"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="description" class="for-label">Description</label>
          <textarea name="listing[description]" class="form-control" required>
          <%= listing.description %></textarea
          >
          <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <div class="mb-3">
          Original Listing Image <br />
          <img src="<%= originalImageUrl %>" alt="Before uploaded image" />
        </div>

        <div class="mb-3">
          <label for="image" class="for-label">Upload new Image</label>
          <input type="file" name="listing[image]" class="form-control" />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="for-label">Price</label>
            <input
              type="number"
              name="listing[price]"
              value="<%= listing.price %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a valid Price</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="for-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              value="<%= listing.country %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country name should be valid</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="for-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            value="<%= listing.location %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location should be valid</div>
        </div>
        <button class="btn btn-dark add-btn mt-3">Edit</button>
        <br /><br />
      </form>
    </div>
  </div>
</body>
